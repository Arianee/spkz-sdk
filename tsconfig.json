{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "esModuleInterop": true,

    "lib": [
      "es5",
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "module": "commonjs"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
